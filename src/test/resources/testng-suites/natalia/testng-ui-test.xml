<suite name="WBD Offers Tests by Groups">

    <!-- Позитивные тесты -->
    <test name="RunPositiveTests">
        <groups>
            <run>
                <include name="Positive"/>
            </run>
        </groups>
        <packages>
            <package name="wbd.tests.web_tests"/>
        </packages>
    </test>

    <!-- Негативные тесты -->
    <test name="RunNegativeTests">
        <groups>
            <run>
                <include name="Negative"/>
            </run>
        </groups>
        <packages>
            <package name="wbd.tests.web_tests"/>
        </packages>
    </test>

</suite>